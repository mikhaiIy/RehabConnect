    <script>
        // Array of unavailable dates from your Schedule table
        var unavailableDates = ["2024-08-01", "2024-08-02", "2024-08-03"];

        // Function to format date to 'YYYY-MM-DD'
        function formatDate(date) {
            return date.toISOString().split('T')[0];
        }

        // Event listener for date input changes
        document.getElementById('schedule-date').addEventListener('change', function (e) {
            var selectedDate = formatDate(e.target.valueAsDate);
            if (unavailableDates.includes(selectedDate)) {
                alert('This date is not available. Please select another date.');
                e.target.value = ''; // Clear the selected date
            }
        });

        // Optionally, disable past dates and unavailable dates in the date picker
        document.getElementById('schedule-date').setAttribute('min', formatDate(new Date()));
    </script>
