@model Roadmap

<div class="col-xl">
  <div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Delete Program</h5>
      <small class="text-muted float-end">Make sure you are deleting the correct <b>Roadmap</b></small>
    </div>
    <div class="card-body">
      <form method="post" class="row">
        <input asp-for="RoadmapId" hidden>
        <div class="mb-3">
          <label asp-for="Name" class="form-label" for="basic-icon-default-fullname">Name</label>
          <div class="input-group input-group-merge">
            <span id="basic-icon-default-fullname2" class="input-group-text"><i class="ti ti-user"></i></span>
            <input asp-for="Name" class="form-control"/>
          </div>
        </div>
        <div class="pt-4">
          <button type="submit" class="btn btn-danger me-sm-3 me-1">Delete</button>
          <button type="reset" class="btn btn-label-secondary"><a asp-controller="Roadmap" asp-action="Index"></a>Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>
