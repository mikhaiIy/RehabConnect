@model Student

@{
    ViewData["Title"] = "Vertical Form - Form Layouts";
}
@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/flatpickr/flatpickr.css" />
    <link rel="stylesheet" href="~/vendor/libs/select2/select2.css" />
}
@section VendorScripts {
    <script src="~/vendor/libs/cleavejs/cleave.js"></script>
    <script src="~/vendor/libs/cleavejs/cleave-phone.js"></script>
    <script src="~/vendor/libs/moment/moment.js"></script>
    <script src="~/vendor/libs/flatpickr/flatpickr.js"></script>
    <script src="~/vendor/libs/select2/select2.js"></script>
}
@section PageScripts {
    <script src="~/js/form-layouts.js"></script>
    <partial name="_ValidationScriptsPartial" />
}

@* ************** Content ************** *@

<div class="row">
    <!-- Basic Layout -->
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Edit Child Detail</h5> <small class="text-muted float-end">Default label</small>
            </div>
            <div class="card-body">
                <form method="post" class="row">
                    <input asp-for="StudentID" hidden />
                    <div class="row mb-3">
                        <label asp-for="ChildName" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="ChildName" disabled class="form-control" placeholder="John Doe" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ChildIC" class="col-sm-2 col-form-label">NRIC</label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="ChildIC" disabled class="form-control" placeholder="xxxxxx-xx-xxxx" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ChildAge" class="col-sm-2 col-form-label">Age</label>
                        <div class="col-sm-10">
                            <input asp-for="ChildAge" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ChildDOB" class="col-sm-2 col-form-label">Date of Birth</label>
                        <div class="col-sm-10">
                            <input asp-for="ChildDOB" disabled class="form-control" type="date" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ChildPassportNo" class="col-sm-2 col-form-label">Passport No.</label>
                        <div class="col-sm-10">
                            <input asp-for="ChildPassportNo" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ChildNationality" class="col-sm-2 col-form-label">Nationality</label>
                        <div class="col-sm-10">
                            <input asp-for="ChildNationality" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ChildRace" class="col-sm-2 col-form-label">Race</label>
                        <div class="col-sm-10">
                            <input asp-for="ChildRace" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ChildBirthPlace" class="col-sm-2 col-form-label">Birth Place</label>
                        <div class="col-sm-10">
                            <input asp-for="ChildBirthPlace" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ChildSex" class="col-sm-2 col-form-label">Sex</label>
                        <div class="col-sm-9">
                            <select asp-for="ChildSex" disabled class="form-select" data-allow-clear="true">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ChildAddress" class="col-sm-2 col-form-label">Address</label>
                        <div class="col-sm-10">
                            <input asp-for="ChildAddress" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ChildPostcode" class="col-sm-2 col-form-label">Postcode</label>
                        <div class="col-sm-10">
                            <input asp-for="ChildPostcode" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ChildCity" class="col-sm-2 col-form-label">City</label>
                        <div class="col-sm-10">
                            <input asp-for="ChildCity" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ChildCountry" class="col-sm-2 col-form-label">Country</label>
                        <div class="col-sm-10">
                            <input asp-for="ChildCountry" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Pediatricians" class="col-sm-2 col-form-label">Pediatricians</label>
                        <div class="col-sm-10">
                            <input asp-for="Pediatricians" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="HospReccommendation" class="col-sm-2 col-form-label">Hospital Reccommendation</label>
                        <div class="col-sm-10">
                            <input asp-for="HospReccommendation" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="DeadlineDiagnose" class="col-sm-2 col-form-label">Deadline Diagnose</label>
                        <div class="col-sm-10">
                            <input asp-for="DeadlineDiagnose" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="DiagnosisOrCondition" class="col-sm-2 col-form-label">Diagnosis Or Condition</label>
                        <div class="col-sm-10">
                            <input asp-for="DiagnosisOrCondition" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="OccupationalTheraphyPlace" class="col-sm-2 col-form-label">Occupational Theraphy Place</label>
                        <div class="col-sm-10">
                            <input asp-for="OccupationalTheraphyPlace" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="SpeechTheoryPlace" class="col-sm-2 col-form-label">Speech Theory Place</label>
                        <div class="col-sm-10">
                            <input asp-for="SpeechTheoryPlace" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="OthersUnitPlace" class="col-sm-2 col-form-label">Others Unit Place</label>
                        <div class="col-sm-10">
                            <input asp-for="OthersUnitPlace" disabled class="form-control" />
                        </div>
                    </div>


                    <div class="row mt-4">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-primary form-control">Update</button>

                        </div>
                        <div class="col-md-6">

                            <button class="btn btn-label-secondary"><a asp-controller="Student" asp-action="Index">Back to List</a></button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>




