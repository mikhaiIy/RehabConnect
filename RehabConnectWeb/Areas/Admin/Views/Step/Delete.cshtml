@model Step

@{
ViewData["Title"] = "Delete Steps";
}
@section VendorStyles{
}
@section VendorScripts {
}
@section PageScripts {

}

<div class="col-xl">
  <div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Delete Step</h5>
      <small class="text-muted float-end">Make sure to delete the correct Step!</small>
    </div>
    <div class="card-body">
      <form method="post" class="row">
        <input asp-for="RoadmapId" hidden/>
        <div class="row g-3">
          <div class="col-md-6">
            <label asp-for="Title" class="form-label" for="multicol-step-name">Title</label>
            <input asp-for="Title" type="text" id="multicol-step-name" class="form-control" disabled/>
          </div>
        </div>
        <div class="row g-3">
          <div class="col-md-6">
            <label asp-for="StepNo" class="form-label" for="multicol-step-number">Step Number</label>
            <input asp-for="StepNo" type="number" id="multicol-step-number" class="form-control" disabled/>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-check mt-3 pb-4">
            <input asp-for="CombinedPricing" class="form-check-input" type="checkbox"  disabled/>
            <label class="form-check-label" >
              Combined Pricing
            </label>
          </div>
        </div>
        <div id="pricingDiv">
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label" for="multicol-first-name">Price Weekday</label>
              <input asp-for="PriceWeekday" type="number" id="multicol-first-name" class="form-control"  disabled/>
            </div>
            <div class="col-md-6">
              <label class="form-label" for="multicol-last-name">Price Weekend</label>
              <input asp-for="PriceWeekend" type="number" id="multicol-last-name" class="form-control" disabled/>
            </div>
          </div>
        </div>
        <div class="pt-4">
          <button type="submit" class="btn btn-danger me-sm-3 me-1">Delete</button>
          <button type="reset" class="btn btn-label-secondary"><a asp-controller="Roadmap" asp-action="Index"></a>Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>


